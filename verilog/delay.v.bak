module delay 
#(	
    parameter DATA_WIDTH = 1, 
	parameter DELAY = 20, 

    //internal
    parameter SHIFT_REG_WIDTH = DATA_WIDTH*DELAY
)
(
	input 						clk, 
    input                       reset,
	input  reg [DATA_WIDTH-1:0] data_in, 
	output     [DATA_WIDTH-1:0] data_out
); 

reg [SHIFT_REG_WIDTH-1:0] shift_reg;
assign data_out = shift_reg[SHIFT_REG_WIDTH:SHIFT_REG_WIDTH-1-DATA_WIDTH];

always @ (posedge clk) begin
    
    if (reset) begin
        shift_reg <= {SHIFT_REG_WIDTH(1'b0)};
    end
    else begin
        shift_reg[SHIFT_REG_WIDTH-1:DATA_WIDTH] <= shift_reg[SHIFT_REG_WIDTH-1-DATA_WIDTH:0];
        shift_reg[DATA_WIDTH-1:0] <= data_in;

    end
end
    
endmodule